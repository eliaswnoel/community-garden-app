<%- include('../partials/header') %>
<div class="menu">
    <a href = "homepage">HOME</a>
    <a href = "/gardens">GARDENS</a>  
</div>
 
</div>
<div class="add-plant-button">
    <form action="/gardens/<%= garden._id %>/plants/new" method="GET">
        <button >ADD PLANT</button>
    </form>
</div>
<div class="plant-box">
    <h2><%= title %></h2>
    <% if (plants.length > 0) { %> 
      <ul>
          <!-- plants will be added here -->
          <%plants.forEach(plant => { %>
            <% if (plant.category == category) { %>
              
              <li>Category: <%= plant.category %></li>
              <li>Name: <%= plant.name %></li>
              <li>Lifecycle: <%= plant.lifeCycle %></li>
              <br>
              <!-- Delete button -->
              <form action="/gardens/<%= garden._id %>/plants/<%= plant._id %>" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button type="submit">X</button>
              </form>
            <% } %>
          <% }); %>
      </ul>
    <% } %> 
  </div>
