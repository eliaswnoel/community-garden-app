<h2 class="volunteer-heading">Volunteer Sign-Up</h2>

 <!-- form for adding a new volunteer -->
 <form id="add-volunteer-form" action="/gardens/<%= garden._id %>/volunteers" method="POST">
    <!-- Only post to garden currently viewing -->
    <input type="hidden" name="gardenId" value="<%= garden._id %>">
    <label>Name:</label>
    <input type="text" name="name">
    <label>Date:</label>
    <input type="date" name="date">
    <label>From:</label>
    <input type="time" name="timeFrom">
    <label>To:</label>
    <input type="time" name="timeTo">
    <input type="submit" value="Add Volunteer">
  </form>



<ul id="volunteer-list">
    <!-- Volunteers will be added here -->
    <ul>
        <%volunteers.forEach(volunteer => { %>
    <li class="volunteer-item">
        <li class="volunteer-item">
            <span class="item-label">Name:</span> <span class="item-value"><%= volunteer.name %></span><br>
            <span class="item-label">Date:</span> <span class="item-value"><%= volunteer.date %></span><br>
            <span class="item-label">Time From:</span> <span class="item-value"><%= volunteer.timeFrom %></span><br>
            <span class="item-label">Time To:</span> <span class="item-value"><%= volunteer.timeTo %></span><br>

          <!-- Delete button -->
          <form action="/gardens/<%= garden._id %>/volunteers/<%= volunteer._id %>?_method=delete" method="POST">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">X</button>
        </form>
    </li>
        <% }); %>
    </ul>






    


